{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"] ,
        "outputs": ["dist/**"],
        "cache": false
      },
      "test": {
         "dependsOn": ["^build"]
      },
      "test:cov": {
        "dependsOn": ["^build"]
      },
      "check-types": {
        "dependsOn": ["^check-types"]
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "format":{
        "cache": false
      },
      "lint":{
        "cache": false
      },
      "check":{
        "cache": false
      }
    },
    "ui": "tui"
  }