{
	"compilerOptions": {
		"target": "esnext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"isolatedModules": true
	},
	"include": ["src", "drizzle.config.ts"],
	"exclude": ["dist", "node_modules"]
}
